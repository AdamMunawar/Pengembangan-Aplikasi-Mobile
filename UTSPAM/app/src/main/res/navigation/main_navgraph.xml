<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navgraph"
    app:startDestination="@id/nav_home"> <fragment
    android:id="@+id/nav_home"  android:name="lat.pam.myrecyclerviewdicoding.HomeFragment"
    android:label="fragment_home"
    tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_order" android:name="lat.pam.myrecyclerviewdicoding.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order">
        <action
            android:id="@+id/action_orderFragment_to_shippingFragment"
            app:destination="@id/shippingFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_profile" android:name="lat.pam.myrecyclerviewdicoding.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/shippingFragment"
        android:name="lat.pam.myrecyclerviewdicoding.ShippingFragment"
        android:label="fragment_shipping"
        tools:layout="@layout/fragment_shipping">
        <action
            android:id="@+id/action_shippingFragment_to_thanksFragment"
            app:destination="@id/thanksFragment" />
    </fragment>

    <fragment
        android:id="@+id/thanksFragment"
        android:name="lat.pam.myrecyclerviewdicoding.ThanksFragment"
        android:label="fragment_thanks"
        tools:layout="@layout/fragment_thanks">
        <action
            android:id="@+id/action_thanksFragment_to_homeFragment"
            app:destination="@id/nav_home" app:popUpTo="@id/nav_home"      app:popUpToInclusive="true" />
    </fragment>

</navigation>